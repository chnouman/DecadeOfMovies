<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/emptyLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/emptyIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_empty_invoice" />

        <com.noumanch.decadeofmovies.ui.widgets.textviews.BoldTextView
            android:id="@+id/emptyTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emptyIV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/no_results_found_movies"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.noumanch.decadeofmovies.ui.widgets.textviews.RegularTextView
            android:id="@+id/emptySubHeadingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emptyTitleTV"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:text="@string/you_can_try_some"
            android:textAlignment="center"
            android:textColor="@color/brownish_grey"
            android:textSize="16sp"

            />


    </RelativeLayout>
</RelativeLayout>